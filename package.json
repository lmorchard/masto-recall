{
  "name": "masto-recall",
  "version": "1.0.0",
  "description": "This is an app that indexes messages from the Mastodon streaming API",
  "type": "module",
  "engines": {
    "node": "16.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p serve streaming",
    "serve": "node index.js serve",
    "streaming": "node index.js streaming",
    "dev": "nodemon index.js serve | pino-pretty"
  },
  "nodemonConfig": {
    "ext": "js,hbs",
    "ignore": [
      "data.sqlite3",
      "**/data/**"
    ],
    "delay": 500
  },
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/accepts": "^4.1.0",
    "@fastify/compress": "^6.2.0",
    "@fastify/static": "^6.6.1",
    "@hapi/boom": "^10.0.0",
    "axios": "^1.2.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^10.0.0",
    "convict": "^6.2.4",
    "dotenv": "^16.0.3",
    "fastify": "^4.11.0",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "knex": "^2.4.0",
    "liquery": "^0.10.0",
    "nodemon": "^2.0.20",
    "normalize-url": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "objection": "^3.0.1",
    "p-queue": "^7.3.4",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "sqlite3": "^5.1.4",
    "tall": "^8.0.0",
    "ws": "^8.12.0"
  }
}
